@{
    ViewData["Title"] = "Proceed to Payment";
}

<header class="success-header">
    <h1>Thank You!</h1>
</header>

<main class="success-content">
    <!-- Proceed to Payment Button -->
    <form asp-controller="Payment" asp-action="CreateCheckoutSession" method="post">
        <input type="hidden" name="licenseType" value="@ViewBag.LicenseType" />
        <button type="submit" class="button">Proceed to Payment</button>
    </form>
</main>

@section Styles {
    <style>
        .success-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .success-content {
            text-align: center;
        }

        .button {
            background-color: #6c63ff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.2em;
        }

            .button:hover {
                background-color: #5448d4;
            }
    </style>
}

@{
    ViewData["Title"] = "Digital Contract";
}

<header class="contract-header">
    <h1>Digital Contract for @ViewBag.License License Tier</h1>
    <p>Please review and sign the contract below to proceed with your purchase.</p>
</header>

<main>
    <section class="contract-section">
        <h2>Terms and Conditions:</h2>

        <p>This agreement outlines the terms and conditions for purchasing the @ViewBag.License license tier. By signing below, you agree to abide by these terms.</p>

        <form method="post" action="/Contract/SignContract">
            <input type="hidden" name="license" value="@ViewBag.License" />

            <div class="form-group">
                <label for="signature">Your Signature:</label>
                <input type="text" id="signature" name="signature" placeholder="Enter your full name as your signature" required />
            </div>

            <button type="submit" class="button">Agree & Continue to Payment</button>

            <p style="margin-top: 20px;">Note: A copy of this signed agreement will be stored securely.</p>

        </form>

        <section>

            <footer class="footer"><p>&copy;2025 Paul K.A Professional Music Production All Rights Reserved.</footer>



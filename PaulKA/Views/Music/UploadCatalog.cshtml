@model MusicCatalogViewModel

<header class="catalog-header">
    <h1>Upload Music Catalog</h1>
    <p>Upload a CSV file to populate your music catalog.</p>
</header>

<section class="upload-section">
    <h2>Upload Catalog CSV</h2>
    <form asp-controller="Music" asp-action="UploadCatalog" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="CsvFile">Choose a CSV file:</label>
            <input type="file" id="CsvFile" name="CsvFile" accept=".csv" required />
            <span asp-validation-for="CsvFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</section>

@if (Model.Songs != null && Model.Songs.Any())
{
    <section class="catalog-table">
        <h2>Uploaded Songs</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Artist</th>
                    <th>Album</th>
                    <th>Title</th>
                    <th>Duration</th>
                    <th>BPM</th>
                    <th>Key</th>
                    <th>Time Signature</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model.Songs)
                {
                    <tr>
                        <td>@song.Artist</td>
                        <td>@song.Album</td>
                        <td>@song.Title</td>
                        <td>@song.Duration</td>
                        <td>@song.BPM</td>
                        <td>@song.Key</td>
                        <td>@song.TimeSignature</td>
                        <td>@song.Genre</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
}
else
{
    <!-- No Songs Available -->
    <p>No songs uploaded yet. Please upload a CSV file.</p>
}
